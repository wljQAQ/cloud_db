{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[Debug] FastAPI Backend",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "3000",
        "--reload"
      ],
      "cwd": "${workspaceFolder}/packages/backend/app",
      "console": "integratedTerminal",
      "justMyCode": true,
      "osx": {
        "python": "${workspaceFolder}/packages/backend/app/.venv/bin/python"
      },
      "linux": {
        "python": "${workspaceFolder}/packages/backend/app/.venv/bin/python"
      },
      "windows": {
        "python": "${workspaceFolder}\\packages\\backend\\app\\.venv\\Scripts\\python.exe"
      }
    }
  ]
}
